{
  "definition_type": "instrument",
  "name": "PiLR EMA App",
  "description": "The PiLR EMA App allows you to setup surveys and messages to deliver to participants through their mobile phone (Android or iOS).  It also allows you to set a delivery schedule and triggering events to initiate them.",
  "code": "ema_ots",
  "version": 3,
  "customizations": {
    "package": "com.pilrhealth.instruments.ema_ots",
    "classnamePrefix": "EmaOts",
    "apix": true,
    "controllers": {
      "configure": "EmaOtsConfig",
      "coordinate": "EmaOts"
    },
    "services": {
      "handleContent": "EmaOtsConfig"
    }
  },
  "settings": [
    {
      "type": "configuration_setting",
      "code": "ema_ots:ema_config",
      "name": "EMA Configuration",
      "description": "The configuration of the EMA content to deliver to the participant."
    },
    {
      "type": "boolean_setting",
      "code": "provider_gps",
      "name": "GPS Provider",
      "description": "Provider used to collect location - GPS.",
      "value": true
    },
    {
      "type": "boolean_setting",
      "code": "provider_network",
      "name": "Network Provider",
      "description": "Provider used to collect location - Network).",
      "value": false
    },
    {
      "type": "integer_setting",
      "code": "interval",
      "name": "Data collection interval (min)",
      "description": "Interval for data collection.",
      "value": 60
    },
    {
      "type": "boolean_setting",
      "code": "do_not_disturb_enabled",
      "name": "Do Not Disturb",
      "description": "Do not disturb enabled or disabled.",
      "value": false
    },
    {
      "type": "time_setting",
      "code": "do_not_disturb_start",
      "name": "App Do not disturb start time",
      "description": "Start time window for do not disturb",
      "value": "20:00",
      "required": true
    },
    {
      "type": "time_setting",
      "code": "do_not_disturb_end",
      "name": "App Do not disturb end time",
      "description": "End time window for do not disturb",
      "value": "08:00",
      "required": true
    }
  ],
  "datasets": [
    {
      "name": "App Log",
      "code": "pilrhealth:mobile:app_log",
      "schemas": [
        {
          "type": "concordia",
          "schemaVersion": 1,
          "name": "1.0",
          "specification": {
            "type": "object",
            "fields": [
              {
                "name": "level",
                "optional": false,
                "doc": "One of: error, warning, debug, or info.",
                "label": "Log level",
                "type": "string"
              },
              {
                "name": "tag",
                "optional": true,
                "doc": "A searchable string for event analytics.",
                "label": "Tag",
                "type": "string"
              },
              {
                "name": "msg",
                "optional": false,
                "doc": "Human readable message.",
                "label": "Message",
                "type": "string"
              },
              {
                "label": "Additional Data",
                "optional": true,
                "type": "object",
                "name": "args",
                "fields": []
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Personal Venues",
      "code": "pilrhealth:mobile:personal_venue",
      "schemas": [
        {
          "type": "concordia",
          "schemaVersion": 1,
          "name": "1.0",
          "specification": {
            "fields": [
              {
                "doc": "The ID assigned to venue",
		        "label": "Venue Id",
                "name": "venue_id",
                "type": "string"
              },
              {
                "doc": "Name assigned to venue by participant.",
                "label": "Venue Name",
                "name": "name",
                "type": "string"
              },
              {
                "label": "Venue Type",
                "name": "venue_type",
                "type": "string",
                "optional": true,
                "doc": "Optional description to specify the type of venue."
              },
              {
                "label": "Action",
                "name": "action",
                "type": "string",
                "doc": "The current state of the venue."
              },
              {
                "label": "Centroid Latitude",
                "name": "lat",
                "type": "number"
              },
              {
                "label": "Centroid Longitude",
                "name": "lon",
                "type": "number"
              },
              {
                "label": "Radius from Centroid",
                "name": "radius",
                "type": "number"
              }
            ],
            "type": "object"
          }
        }
      ]
    },
    {
      "name": "Survey Data",
      "code": "pilrhealth:mobile:survey_data",
      "schemas": [
        {
          "type": "concordia",
          "schemaVersion": 1,
          "name": "1.0",
          "specification": {
            "type": "object",
            "fields": [
              {
                "name": "event_type",
                "type": "string",
                "label": "Event Type"
              },
              {
                "name": "survey_code",
                "type": "string",
                "label": "Survey Code",
                "optional": true
              },
              {
                "name": "session",
                "type": "string",
                "label": "Session"
              },
              {
                "name": "question_type",
                "type": "string",
                "label": "Question Type",
                "optional": true
              },
              {
                "name": "question_code",
                "type": "string",
                "label": "Question Code",
                "optional": true
              },
              {
                "name": "response",
                "type": "string",
                "label": "Response",
                "optional": true
              },
              {
                "name": "response_value",
                "type": "string",
                "label": "Response Value",
                "optional": true
              },
              {
                "name": "responses",
                "type": "array",
                "constType": {
                  "type": "string"
                },
                "label": "Responses",
                "optional": true
              },
              {
                "name": "response_values",
                "type": "array",
                "constType": {
                  "type": "string"
                },
                "label": "Response Values",
                "optional": true
              },
              {
                "label": "Additional Data",
                "optional": true,
                "type": "object",
                "name": "more_data",
                "fields": [
                  {
                    "name": "text",
                    "type": "string",
                    "label": "Text",
                    "optional": true
                  },
                  {
                    "name": "value",
                    "type": "string",
                    "label": "Value",
                    "optional": true
                  },
                  {
                    "name": "selected",
                    "type": "boolean",
                    "label": "Selected",
                    "optional": true
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  ]
}
